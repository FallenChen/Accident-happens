{
	"configurations": [
		{
			"name": "(gdb) Docker",
			"type": "cppdbg",
			"request": "launch",
			"program": "build/apps/program",
			"args": [],
			"stopAtEntry": true,
			"cwd": "/work",
			"environment": [],
			"externalConsole": true,
			"preLaunchTask": "make debug",
			"targetArchitecture": "x64",
			"sourceFileMap": {
			    "/work": "${workspaceFolder}"
			},
			"pipeTransport": {
			    "debuggerPath": "/usr/bin/gdb",
			    "pipeProgram": "docker",
			    "pipeArgs": [
				"run",
				"--rm",
				"-i",
				"-v",
				"${workspaceFolder}:/work",
				"--privileged",
				"--workdir",
				"/work",
				"gdb",
				"sh",
				"-c"
			    ],
			    "pipeCwd": ""
			},
			"MIMode": "gdb",
			"setupCommands": [
			    {
				"description": "Enable pretty-printing for gdb",
				"text": "-enable-pretty-printing",
				"ignoreFailures": true
			    }
			]
		    }	
	]
}